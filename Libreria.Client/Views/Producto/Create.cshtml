@model Libreria.Server.DTO.ProductoDTO

@{
    ViewData["Title"] = "Crear Producto";
}

<h2 class="mb-4">➕ Nuevo Producto</h2>

<div class="card shadow-lg border-0 rounded">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del producto" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-bold"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del producto"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PrecioUnitario" class="form-label fw-bold"></label>
                <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" placeholder="0.00" />
                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StockActual" class="form-label fw-bold"></label>
                <input asp-for="StockActual" class="form-control" type="number" placeholder="0" />
                <span asp-validation-for="StockActual" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label fw-bold"></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                    <option value="">-- Seleccione una categoría --</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">⬅️ Volver</a>
                <button type="submit" class="btn btn-success">💾 Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
