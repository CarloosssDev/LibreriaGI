@model Libreria.Server.DTO.ProductoDTO

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2 class="mb-4 text-success">📘 @ViewData["Title"]</h2>

<div class="card shadow-sm border-0 rounded">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">@Model.Nombre</h4>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">📝 Descripción:</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3 fw-bold">💲 Precio:</dt>
            <dd class="col-sm-9">@Model.PrecioUnitario.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">📦 Stock:</dt>
            <dd class="col-sm-9">@Model.StockActual</dd>

            <dt class="col-sm-3 fw-bold">📂 Categoría:</dt>
            <dd class="col-sm-9">@Model.CategoriaNombre</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">⬅️ Volver</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Editar</a>
    </div>
</div>
