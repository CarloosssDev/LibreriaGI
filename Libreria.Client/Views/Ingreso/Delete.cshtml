@model Libreria.Server.DTO.IngresoDTO

@{
    ViewData["Title"] = "Eliminar Ingreso";
}

<h2 class="mb-4 text-danger">🗑️ Eliminar Ingreso</h2>

<div class="card shadow-sm border-0 rounded">
    <div class="card-body">
        <p>¿Está seguro que desea eliminar el siguiente ingreso?</p>

        <dl class="row">
            <dt class="col-sm-3">Nombre Producto:</dt>
            <dd class="col-sm-9">@Model.ProductoNombre</dd>

            <dt class="col-sm-3">Cantidad:</dt>
            <dd class="col-sm-9">@Model.Cantidad</dd>

            <dt class="col-sm-3">Comentario</dt>
            <dd class="col-sm-9">@Model.Comentario</dd>

            <dt class="col-sm-3">Fecha:</dt>
            <dd class="col-sm-9">@Model.Fecha?.ToLongDateString()</dd>

        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">⬅️ Cancelar</a>
                <button onclick="return confirm('¿Seguro de eliminar este ingreso? \nLa acción no se puede deshacer.')" type="submit" class="btn btn-danger">🗑️ Eliminar</button>
            </div>
        </form>
    </div>
</div>
