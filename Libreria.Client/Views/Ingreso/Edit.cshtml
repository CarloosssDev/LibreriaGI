@model Libreria.Server.DTO.IngresoDTO

@{
    ViewData["Title"] = "Editar Ingreso";
}

<h2 class="mb-4">✏️ Editar Ingreso</h2>

<div class="card shadow-lg border-0 rounded">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <div class="mb-3">
                <label asp-for="Cantidad" class="form-label fw-bold"></label>
                <input asp-for="Cantidad" class="form-control" placeholder="Ingresa la cantidad a agregar" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comentario" class="form-label fw-bold"></label>
                <textarea asp-for="Comentario" class="form-control" rows="3" placeholder="Comentario del ingreso"></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductoId" class="form-label fw-bold">Producto</label>
                <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.Productos">
                    <option value="">-- Seleccione un Producto --</option>
                </select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">⬅️ Volver</a>
                <button type="submit" class="btn btn-success">💾 Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
